@{
    Layout = null;
    var value = ViewBag.v as ProductComposite;
}
<div class="container">
    <br />
    <br />
    <div class="row">
        <div class="col-md-4">
            <div class="card-header">Toplam ürün sayısı:@value.TotalCount()</div>
            <div class="card-body">
                @foreach(var item in value.Components)
                {
                    @Html.Raw(item.Display());
                }
            </div>
        </div>
    </div>
</div>