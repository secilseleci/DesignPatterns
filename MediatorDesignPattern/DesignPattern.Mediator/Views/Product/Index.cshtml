@using DesignPattern.Mediator.MediatorPattern.Results
@model List<GetAllProductQueryResult>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    @{
        Layout = null;
    }
    <div class="container">
        <br />

        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Ürün Ad</th>
                <th>Fiyat</th>
                <th>Stok Sayısı</th>
                <th>Stok Türü</th>
                <th>Kategori</th>
                <th>Sil</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductID</td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductPrice</td>
                    <td>@item.ProductStock</td>
                    <td>@item.ProductStockType</td>
                    <td>@item.ProductCategory</td>

                     <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
                     <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-warning">Güncelle</a></td>
                     <td><a href="/Product/GetProduct/@item.ProductID" class="btn btn-info">Detaylar</a></td>
                </tr>
            }
        </table>
        <a href="/Product/AddProduct/" class="btn btn-info">Ürün Ekle</a>

    </div>
